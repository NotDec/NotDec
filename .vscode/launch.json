    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "decompile",
            // "program": "${workspaceFolder}/build/bin/notdec",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "-i",
                "${file}",
                "-o",
                "${file}.ll",
                // "--log-level",
                // "level_debug",
                "--compat-mode",
                "--expand-mem=false"
            ],
            "cwd": "${workspaceFolder}",
            // "preLaunchTask": "build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "recompile",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "-i",
                "${file}",
                "-o",
                "${file}.ll",
                "--log-level",
                "level_debug",
                "--compat-mode",
                "--recompile"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "structural emcc_print",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "-i",
                "${file}",
                "-o",
                "${file}.c",
                "--log-level",
                "level_info",
                "--compat-mode",
                "--expand-mem=false"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}