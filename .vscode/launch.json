{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "decompile offset1",
      "program": "${workspaceFolder}/build/bin/notdec",
      "args": [
        "test/backend/offset1.wat",
        "-o",
        "test/backend/offset1.wat.ll",
        "-debug-only=type-recovery",
        "--print-before=type-recovery"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: build",
      "env": {
        "DEBUG_MIN_GRAPH": "1",
        "DEBUG_TRANS_SAT_GRAPH": "1"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "decompile emcc-print",
      "program": "${workspaceFolder}/build/bin/notdec",
      "args": [
        "${workspaceFolder}/test/wasm/emcc-print.wat",
        "-o",
        "${workspaceFolder}/test/wasm/emcc-print.wat.ll",
        "--log-level=debug",
        "--split-mem",
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: build",
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "decompile",
      "program": "${workspaceFolder}/build/bin/notdec",
      "args": [
        "${file}",
        "-o",
        "${file}.ll",
        "-debug-only=type-recovery",
        "--print-before=type-recovery"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: build",
      "env": {
        "DEBUG_MIN_GRAPH": "1",
        "DEBUG_TRANS_SAT_GRAPH": "1"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "recompile",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "${file}",
        "-o",
        "${file}.ll",
        "--log-level",
        "debug",
        "--compat-mode",
        "--recompile",
        "--expand-mem=false"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "GraphTest SlidesExampleTest",
      "program": "${workspaceFolder}/build/bin/GraphTest",
      "args": [
        "--gtest_filter=Retypd.SlidesExampleTest",
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: build",
      "env": {
        "DEBUG_TRANS_INIT_GRAPH": "1",
        "DEBUG_TRANS_SAT_GRAPH": "1"
      }
    }
  ]
}
